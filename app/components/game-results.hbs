<h4 class="text-green-dark text-left text-4xl">Games played: {{@games.length}}</h4>
{{#each (take 25 (reverse @games)) as |game|}}
  <div class="bg-light m-2 d-flex font-bold">
    <div class="flex-1 text-right p-2">
      {{game.homeTeam.name}}
    </div>
    <div class="flex-shink bg-warning p-2 mr-2 border-r-2 border-yellow-dark">
      {{game.homeGoals}}
    </div>
    <div class="flex-shrink bg-warning p-2 border-l-2 border-warning">
      {{game.awayGoals}}
    </div>
    <div class="flex-1 p-2">
      {{game.awayTeam.name}}
    </div>
  </div>
{{/each}}
