<div class="jumbotron bg-light">
  <h1 class="display-4">Coming Soon</h1>
  <p class="lead">Don't miss our launch date, request an invitation now</p>
  <form {{ on "submit" this.submitEmail}}>
    <div class="input-group mb-3">
      <div class="input-group-prepend">
        <span class="input-group-text" id="basic-addon1">@</span>
      </div>
      <Input type="email" class="form-control" placeholder="Please enter email address" @value={{this.emailAddress}}
        aria-label="Username" aria-describedby="basic-addon1" />
    </div>
    <button class="btn btn-info btn-lg">Request invitation</button>
  </form>
</div>
