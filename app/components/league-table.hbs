
<table class="w-full">
  <thead class="bg-grey-lighter border-b-2 border-grey p-4 m-4 text-left align-bottom">
    <th class="h-10 w-10"></th>
    <th>Team</th>
    <th>Played</th>
    <th>Won</th>
    <th>Drawn</th>
    <th>Lost</th>
    <th>For</th>
    <th>Against</th>
    <th>GD</th>
    <th>Points</th>
    <th>Form</th>
  </thead>
  {{#each @teams as | team index |}}
    <tr class="border-t-2 border-light bg-light my-2 p-1">
      <td>{{add 1 index}}</td>
      <td class="font-bold">{{team.name}}</td>
      <td>{{team.gamesPlayed.length}} </td>
      <td>{{team.gamesWon.length}}</td>
      <td>{{team.gamesDrawn.length}}</td>
      <td>{{team.gamesLost.length}} </td>
      <td>{{team.goalScored}}</td>
      <td>{{team.goalConceded}} </td>
      <td>{{team.gamePoints}}</td>
      <td class="font-bold"></td>
      <td>
        <div class="flex text-white text-sm text-center"></div>
      </td>
    </tr>
    {{/each}}
</table>
